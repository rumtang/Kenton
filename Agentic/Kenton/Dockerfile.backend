# Backend-only Dockerfile for Kenton Deep Research Agent
FROM python:3.12-slim

# Install only necessary system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy Python files
COPY *.py ./
COPY agent_config.py ./
COPY env_config.py ./
COPY conversation_manager.py ./
COPY task_complexity.py ./
COPY consulting_brain_apis.mcp ./

# Copy tools and utils directories
COPY tools/ ./tools/
COPY utils/ ./utils/

# Set environment variables for production
ENV PORT=8001
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Health check for Cloud Run
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:${PORT}/health || exit 1

# Expose port
EXPOSE 8001

# Run the backend server
CMD ["python", "fixed_api_server.py"]